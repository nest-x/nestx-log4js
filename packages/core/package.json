{
  "name": "@nestx-log4js/core",
  "version": "1.1.1",
  "description": "nestx-log4js core module",
  "author": "aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/nest-x/nestx-log4js#readme",
  "keywords": [
    "nestjs",
    "nestx",
    "log4js",
    "logger"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nest-x/nestx-log4js.git"
  },
  "bugs": {
    "url": "https://github.com/nest-x/nestx-log4js/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "index.ts"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "log4js": "^6.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.1.2",
    "@nestjs/testing": "7.4.4",
    "@types/jest": "26.0.15",
    "@types/node": "13.13.5",
    "jest": "26.6.1",
    "proxyquire": "2.1.3",
    "ts-jest": "26.4.3",
    "ts-loader": "8.0.7",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts",
      "!<rootDir>/src/__tests__/**/*.ts",
      "!<rootDir>/src/shared/**/*.ts",
      "!<rootDir>/src/index.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/reports/coverage"
  }
}
