{
  "name": "nestx-log4js",
  "version": "1.5.1",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "lint": "eslint \"packages/*/src/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "build": "lerna run build",
    "release": "semantic-release"
  },
  "dependencies": {
    "@nestjs/common": "8.4.7",
    "@nestjs/core": "8.4.7",
    "@nestjs/platform-express": "8.4.7",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.8",
    "@nestjs/schematics": "9.0.1",
    "@nestjs/testing": "8.4.7",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.56",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.36.0",
    "@typescript-eslint/parser": "5.36.0",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "26.6.3",
    "lerna": "5.4.3",
    "prettier": "2.7.1",
    "semantic-release": "19.0.5",
    "sinon": "14.0.0",
    "supertest": "6.2.4",
    "ts-jest": "26.5.6",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.2"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "lerna exec --concurrency 1 -- npm version ${nextRelease.version} && lerna version ${nextRelease.version} --no-git-tag-version --no-push --amend --yes",
          "publishCmd": "lerna exec --concurrency 1 -- npm publish --access public --registry=https://registry.npmjs.org"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "lerna.json",
            "package.json",
            "packages/*/package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
