{
  "name": "nestx-log4js",
  "version": "1.5.2",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "lint": "eslint \"packages/*/src/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "build": "lerna run build",
    "release": "semantic-release"
  },
  "dependencies": {
    "@nestjs/common": "8.4.7",
    "@nestjs/core": "9.0.5",
    "@nestjs/platform-express": "8.4.7",
    "reflect-metadata": "0.2.2",
    "rimraf": "5.0.10",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "9.4.2",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "8.4.7",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/express": "5.0.0",
    "@types/jest": "27.5.2",
    "@types/node": "22.10.3",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "26.6.3",
    "lerna": "6.6.2",
    "prettier": "3.4.2",
    "semantic-release": "19.0.5",
    "sinon": "18.0.1",
    "supertest": "7.0.0",
    "ts-jest": "26.5.6",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.2"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "lerna exec --concurrency 1 -- npm version ${nextRelease.version} && lerna version ${nextRelease.version} --no-git-tag-version --no-push --amend --yes",
          "publishCmd": "lerna exec --concurrency 1 -- npm publish --access public --registry=https://registry.npmjs.org"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "lerna.json",
            "package.json",
            "packages/*/package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
