{
  "name": "nestx-log4js",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "build": "lerna run build",
    "release": "semantic-release"
  },
  "dependencies": {
    "@nestjs/common": "7.4.4",
    "@nestjs/core": "7.4.4",
    "@nestjs/platform-express": "7.4.4",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.1.2",
    "@nestjs/testing": "7.4.4",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@types/express": "4.17.8",
    "@types/jest": "26.0.14",
    "@types/node": "13.13.5",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.4.0",
    "@typescript-eslint/parser": "4.4.0",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.5.0",
    "lerna": "3.22.1",
    "prettier": "2.1.2",
    "semantic-release": "17.1.2",
    "sinon": "9.1.0",
    "supertest": "5.0.0",
    "ts-jest": "26.4.1",
    "ts-loader": "8.0.4",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.3"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts",
      "!<rootDir>/src/__tests__/**/*.ts",
      "!<rootDir>/src/shared/**/*.ts",
      "!<rootDir>/src/index.ts",
      "<rootDir>/packages/*/src/*.ts",
      "!<rootDir>/packages/*/src/__tests__/**/*.ts",
      "!<rootDir>/packages/*/src/shared/**/*.ts",
      "!<rootDir>/packages/*/src/index.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts",
      "<rootDir>/packages/*/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/reports/coverage"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "lerna exec --concurrency 1 -- npm version ${nextRelease.version} && lerna exec --concurrency 1 -- npm publish --access public --registry=https://registry.npmjs.org && lerna version ${nextRelease.version} --no-git-tag-version --no-push --amend --yes"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "lerna.json",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
